@{
    ViewData["Title"] = "User";
}
<!--begin::Content-->
<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <!--begin::Entry-->
    <div class="d-flex flex-column-fluid">
        <!--begin::Container-->
        <div class="container">
            <!--begin::Card-->
            <div class="card card-custom">
                <div class="card-header flex-wrap border-0 pt-6 pb-0">
                    <div class="card-title">
                        <h3 class="card-label">
                            Users
                        </h3>
                    </div>
                    <div class="card-toolbar">
                    </div>
                </div>
                <div class="card-body">
                    <!--begin: Datatable-->
                    <table class="table table-bordered table-hover table-checkable" id="kt_datatable" style="margin-top: 13px !important">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Phone</th>
                                <th>Email</th>
                                <th>Total Orders</th>
                                <th>Last Order</th>
                                <th>Avg Rating Given</th>
                                <th style="max-width:20%">Actions</th>
                            </tr>
                        </thead>
                    </table>
                    <!--end: Datatable-->
                </div>
            </div>
            <!--end::Card-->
        </div>
        <!--end::Container-->
    </div>
    <!--end::Entry-->
</div>
<!--end::Content-->
<input type="hidden" id="RecordId" />
<div class="modal fade-rght" id="RecordModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel2">
    <form id="RecordModalForm">
        <div class="modal-dialog modal-right-dialog" role="document">
            <div class="modal-content modal-right-content">
                <div class="modal-header">
                    <h5 class="modal-title"><span id="RecordModalTitle">New</span> Record</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <i aria-hidden="true" class="ki ki-close"></i>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Min Weight: </label>
                        <input type="number" id="MinWeight" required class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Max Weight: </label>
                        <input type="number" id="MaxWeight" required class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Rate: </label>
                        <input type="number" id="Rate" required class="form-control" />
                    </div>
                    <div class=" form-group">
                        <label>Courier Type: </label>
                        <select class="form-control" id="CourierTypeId">
                            <option value="">Select Courier Type</option>
                            @*@foreach (var item in Model)
                            {
                                <option value="@item.Id">@item.Name</option>
                            }*@
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>
        </div>
    </form>
</div>
<style>
    .dataTables_filter {
        text-align: right;
    }

        .dataTables_filter label {
            text-align: left;
        }

    #kt_datatable_paginate {
        text-align: right;
    }

    .paging_simple_numbers {
        float: right;
    }
</style>
@section scripts
{
    <script>
        function getDateFormatted(date) {
            var dt = date.split("-");
            var dd = dt[2].split("T");
            return dt[0] + "-" + dt[1] + "-" + dd[0];
        }

    $(document).ready(function () {
        var options = {
            ajax: {
                url: "user/GetAllUsers",
                method: "GET",
                dataSrc: ''
            },
            columns: [
                {
                    data: "name"
                },
                {
                    data: "mobileNo"
                },
                {
                    data: "email"
                },
                {
                    data: "totalOrders"
                },
                {
                    render: function (data, type, row) {
                        var dt = new Date(row.lastOrderDate);
                        if (dt.getFullYear() == 1970) {
                            return "N/A";
                        }
                        return dt.toLocaleDateString();
                    }
                },
                {
                    data: "avgGivenRating"
                },
                {
                    render: function (data, type, row) {
                        var btns = "<a class='btn btn-sm btn-clean btn-icon btnDelete' record-id='" + row.id + "' title='Delete'><i class='la la-trash'></i></a>";
                        return btns;
                    }
                }
            ],
        }
        var KtTable = $("#kt_datatable").DataTable(options);


        $(document).on("click", ".btnDelete", function () {
            var btn = $(this);
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: "user/DeleteUser?Id=" + btn.attr("record-id"),
                        method: "DELETE",
                        success: function () {
                            console.log("success");
                            Swal.fire(
                                'Deleted!',
                                'Your file has been deleted.',
                                'success'
                            );
                            KtTable.ajax.reload();
                        },
                        error: function () {
                            console.log("error");
                            Swal.fire(
                                'Oops!',
                                'Something went wrong.',
                                'error'
                            )
                        }
                    });
                }
            })
        })

        function clearModalData() {
            $("#MinWeight").val("");
            $("#MaxWeight").val("");
            $("#CourierTypeId").val("");
            $("#Rate").val("");
            $("#RecordId").val(0);
        }
    })
    </script>
}